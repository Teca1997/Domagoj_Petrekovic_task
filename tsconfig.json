{
    "compilerOptions": {
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "baseUrl": "./",
      "outDir": "build/dist",
      "module": "CommonJS",
      "target": "ESNext",
      "lib": ["ES6", "DOM", "ESNext"],
      "sourceMap": true,
      "allowJs": true,
      "moduleResolution": "node",
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "typeRoots": ["./src/@types/", "./node_modules/@type"]
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules"]
  }